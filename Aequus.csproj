<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />

  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <EmbeddedResource Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <None Remove="Temp\SourceGenerators.Generator\**" />
	<EmbeddedResource Remove="Temp\SourceGenerators.Generator\**" />
	<Compile Remove="Temp\SourceGenerators.Generator\**" />
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>
	
  <ItemGroup>
	<ProjectReference Include="..\AequusMusic\AequusMusic.csproj" />
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Temp</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>
	
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
	<AdditionalFiles Remove="Old\**" />
	<Compile Remove="Old\**" />
	<AdditionalFiles Include="Old\**\*.png" />
	<AdditionalFiles Include="Old\**\*.ogg" />
  </ItemGroup>
	
  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
	<AdditionalFiles Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
  </ItemGroup>
	
  <ItemGroup>
    <None Remove="Assets\Textures\None.png" />
    <None Remove="Assets\Textures\Pixel.png" />
    <None Remove="Old\Assets\Shaders\Flash.fx" />
    <None Remove="Old\Assets\Shaders\GlimmerBackgroundShaders.fx" />
    <None Remove="Old\Assets\Sounds\ZumboPettingSqueak.ogg" />
    <None Remove="Old\Content\Bosses\OmegaStarite\Sounds\OmegaStariteHit0.ogg" />
    <None Remove="Old\Content\Bosses\OmegaStarite\Sounds\OmegaStariteHit1.ogg" />
    <None Remove="Old\Content\Bosses\OmegaStarite\Sounds\OmegaStariteHit2.ogg" />
    <None Remove="Old\Content\Critters\DwarfStarite.png" />
    <None Remove="Old\Content\Critters\DwarfStariteItem.png" />
    <None Remove="Old\Content\Enemies\Glimmer\Hyper\Tiles\HyperStariteBanner.png" />
    <None Remove="Old\Content\Enemies\Glimmer\Proto\Tiles\StariteBanner.png" />
    <None Remove="Old\Content\Enemies\Glimmer\SuperStariteBullet.png" />
    <None Remove="Old\Content\Enemies\Glimmer\Super\Tiles\SuperStariteBanner.png" />
    <None Remove="Old\Content\Equipment\Accessories\LaserScope\LaserReticle.png" />
    <None Remove="Old\Content\Equipment\Accessories\LaserScope\LaserReticle_Glow.png" />
    <None Remove="Old\Content\Events\Glimmer\Spawners\GalacticStarfruit.png" />
    <None Remove="Old\Content\Particles\CosmicCrystalDust.png" />
    <None Remove="Old\Content\Particles\MonoSparkleDust.png" />
    <None Remove="Old\Content\StatusEffects\BlueFire.png" />
    <None Remove="Old\Content\Tools\PhysicsGun.png" />
    <None Remove="Old\Content\Tools\PhysicsGunProj.png" />
    <None Remove="Old\Content\Tools\PhysicsGun_Glow.png" />
  </ItemGroup>
	
  <ItemGroup>
    <Folder Include="Old\Common\Items\" />
    <Folder Include="Old\Content\Weapons\Sentries\" />
  </ItemGroup>
	
</Project>