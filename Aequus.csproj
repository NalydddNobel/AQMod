<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />
	
  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <EmbeddedResource Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <None Remove="Temp\SourceGenerators.Generator\**" />
	<EmbeddedResource Remove="Temp\SourceGenerators.Generator\**" />
	<Compile Remove="Temp\SourceGenerators.Generator\**" />
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Temp</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
	<AdditionalFiles Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
	<AdditionalFiles Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
	<Compile Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Old\Assets\Sounds\Meathook\meathook0.ogg" />
    <None Remove="Old\Assets\Sounds\Meathook\meathook1.ogg" />
    <None Remove="Old\Assets\Sounds\Meathook\meathookConnect.ogg" />
    <None Remove="Old\Assets\Sounds\Meathook\meathookPull.ogg" />
    <None Remove="Old\Content\Equipment\Accessories\SpiritKeg\KegOSpirits.png" />
    <None Remove="Old\Content\Equipment\Accessories\SpiritKeg\SaivoryKnife.png" />
    <None Remove="Old\Content\Equipment\Accessories\SpiritKeg\SpiritBottle.png" />
    <None Remove="Old\Content\Equipment\GrapplingHooks\LeechHook.png" />
    <None Remove="Old\Content\Equipment\GrapplingHooks\LeechHookProj.png" />
    <None Remove="Old\Content\Equipment\GrapplingHooks\LeechHookProj_Chain.png" />
    <None Remove="Old\Content\Equipment\GrapplingHooks\Meathook.png" />
    <None Remove="Old\Content\Equipment\GrapplingHooks\MeathookProj.png" />
    <None Remove="Old\Content\Equipment\GrapplingHooks\MeathookProj_Chain.png" />
    <None Remove="Old\Content\Materials\BloodyTearstone.png" />
    <None Remove="Old\Content\Potions\Foods\SusSteak\SuspiciousLookingSteak.png" />
    <None Remove="Old\Content\Potions\Resurrection\PotionOfResurrection.png" />
  </ItemGroup>
	
</Project>