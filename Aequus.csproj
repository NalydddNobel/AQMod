<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />
	
  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Temp</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\Sounds\Items\CrossbowShoot.ogg" />
    <None Remove="Items\Equipment\Accessories\Movement\FlashwayShield\FlashwayShield_Shield.png" />
    <None Remove="Items\Equipment\Accessories\Movement\SlimyBlueBalloon\SlimyBlueBalloon.png" />
    <None Remove="Items\Equipment\Accessories\Movement\SlimyBlueBalloon\SlimyBlueBalloon_Balloon.png" />
    <None Remove="Items\Equipment\Accessories\Movement\WeightedHorseshoe\WeightedHorseshoe.png" />
    <None Remove="Items\Weapons\Ranged\Bows\SkyHunterCrossbow\Chain.png" />
    <None Remove="Localization\en-US_Mods.Aequus.Buffs.hjson" />
    <None Remove="TownNPCs\SkyMerchant\balloon.png" />
    <None Remove="TownNPCs\SkyMerchant\basket.png" />
    <None Remove="TownNPCs\SkyMerchant\Shimmer\Balloon.png" />
    <None Remove="TownNPCs\SkyMerchant\Shimmer\Basket.png" />
    <None Remove="TownNPCs\SkyMerchant\SkyMerchant_Aiming.png" />
  </ItemGroup>

</Project>