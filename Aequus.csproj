<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />

  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <EmbeddedResource Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <None Remove="Temp\SourceGenerators.Generator\**" />
	<EmbeddedResource Remove="Temp\SourceGenerators.Generator\**" />
	<Compile Remove="Temp\SourceGenerators.Generator\**" />
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>
	
  <ItemGroup>
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Temp</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>
	
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
	<AdditionalFiles Remove="Old\**" />
	<Compile Remove="Old\**" />
	<AdditionalFiles Include="Old\**\*.png" />
	<AdditionalFiles Include="Old\**\*.ogg" />
  </ItemGroup>
	
  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
	<AdditionalFiles Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
  </ItemGroup>
	
  <ItemGroup>
    <None Remove="Assets\Textures\TrailShootingStar.png" />
    <None Remove="Old\Assets\Shaders\NecromancyOutline.fx" />
    <None Remove="Old\Assets\Sounds\recruitZombie.ogg" />
    <None Remove="Old\Content\Necromancy\Equipment\Accessories\Chains\SoulChains.png" />
    <None Remove="Old\Content\Necromancy\Equipment\Accessories\PandorasBox.png" />
    <None Remove="Old\Content\Necromancy\Equipment\Accessories\PharaohsCurse.png" />
    <None Remove="Old\Content\Necromancy\Equipment\Accessories\RitualisticSkull.png" />
    <None Remove="Old\Content\Necromancy\Equipment\Accessories\ShadowVeer.png" />
    <None Remove="Old\Content\Necromancy\Equipment\Accessories\SouljointCuffs.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Dungeon\Insurgency.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Dungeon\InsurgencyProj.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Dungeon\Insurgency_Glow.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Dungeon\Revenant.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Dungeon\Revenant_Glow.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Evil\CorruptionSceptre.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Evil\CorruptionSceptreProj.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Evil\CorruptionSceptre_Glow.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Evil\CrimsonSceptre.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Evil\CrimsonSceptre_Glow.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Forbidden\LocustLarge.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Forbidden\LocustSmall.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Forbidden\Osiris.png" />
    <None Remove="Old\Content\Necromancy\Sceptres\Forbidden\Osiris_Glow.png" />
    <None Remove="Old\Content\Particles\GhostDrainDust.png" />
  </ItemGroup>
	
</Project>