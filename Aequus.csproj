<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />

  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <EmbeddedResource Remove="Old\**" Condition="'$(Configuration)' == 'Debug'" />
    <None Remove="Temp\SourceGenerators.Generator\**" />
	<EmbeddedResource Remove="Temp\SourceGenerators.Generator\**" />
	<Compile Remove="Temp\SourceGenerators.Generator\**" />
    <None Remove="UnitTesting\**" />
	<EmbeddedResource Remove="UnitTesting\**" />
	<Compile Remove="UnitTesting\**" />
    <None Remove="TerrariaProxy\**" />
	<EmbeddedResource Remove="TerrariaProxy\**" />
	<Compile Remove="TerrariaProxy\**" />
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>
	
  <ItemGroup>
	<ProjectReference Include="..\AequusMusic\AequusMusic.csproj" />
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Temp</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>
	
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>
	
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>False</Optimize>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
	<AdditionalFiles Remove="Old\**" />
	<Compile Remove="Old\**" />
	<AdditionalFiles Include="Old\**\*.png" />
	<AdditionalFiles Include="Old\**\*.ogg" />
  </ItemGroup>
	
  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
	<AdditionalFiles Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/SourceGenerators.Generator/**" />
  </ItemGroup>
	
  <ItemGroup>
    <None Remove="Content\CrossMod\SplitSupport\Photography\Envelopes\GlimmerEnvelope.png" />
    <None Remove="Content\CrossMod\SplitSupport\Photography\Envelopes\PollutedOceanEnvelope.png" />
    <None Remove="Content\CrossMod\SplitSupport\Photography\SplitAlbum.png" />
  </ItemGroup>
	
</Project>